<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/recentchat_parent_layout"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listProfilePicture"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/default_profile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:layout_toRightOf="@id/listProfilePicture"
        android:text="Ken Adams"
        android:textColor="#000"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/listProfilePicture"
        app:layout_constraintTop_toTopOf="@+id/listProfilePicture" />

    <TextView
        android:id="@+id/listEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="32dp"
        android:paddingLeft="1dp"
        android:text="example@gmail.com"
        android:textColor="#000"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/listProfilePicture"
        app:layout_constraintTop_toBottomOf="@+id/listUsername" />




</androidx.constraintlayout.widget.ConstraintLayout>